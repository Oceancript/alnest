{%- form 'localization', id: 'localization_form_tag', class: 'lang-switcher-form' -%}
  <div class="localization-form__buttons">
    {% for locale in localization.available_countries %}
    <button id="locale_item" class="localization-button link" lang="{{ locale.iso_code }}" >{{ locale.endonym_name }}</button>
    {% endfor %}
  </div>
{%- endform -%}

<script>
  document.querySelectorAll(".localization-button").forEach(item => {
    item.addEventListener("click", event => {
      // document.getElementById("localeCode").value = item.getAttribute("lang");
      document.getElementById("localization_form_tag").submit();
    });
  });
</script>